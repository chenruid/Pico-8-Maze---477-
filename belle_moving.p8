version 38
__lua__
-- belle
belle = {}
belle.x = 58
belle.y = 100
belle.sprite = 0
belle.speed = 1

function move()
  belle.moving = true
  belle.sprite += 1
  if belle.sprite > 2 then
   	belle.sprite = 0
  end
end

function _update()
 belle.moving = false

  if btn(0) then
    belle.x -= belle.speed
    move()
  end
  if btn(1) then
    belle.x += belle.speed
    move()
  end
  if btn(2) then
    belle.y -= belle.speed
    move()
  end
  if btn(3) then
    belle.y += belle.speed
    move()
  end
  if not belle.moving then
    belle.sprite = 0
  end
end

function _draw()
  cls()
  spr(belle.sprite, belle.x, belle.y)
end
